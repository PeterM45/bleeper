{
  "name": "bleeper",
  "version": "0.1.3",
  "description": "Ultra-lightweight, zero-dependency profanity filter with advanced character substitution detection",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "node --test tests/filter.test.js tests/contains.test.js tests/analyze.test.js scripts/perf-test.js",
    "test:filter": "node --test tests/filter.test.js",
    "test:contains": "node --test tests/contains.test.js",
    "test:analyze": "node --test tests/analyze.test.js",
    "test:perf": "node scripts/perf-test.js",
    "debug": "node scripts/debug.js",
    "clean": "rm -rf dist",
    "lint": "echo 'Linting would go here - keeping minimal for zero dependencies'",
    "benchmark": "node scripts/benchmark.js",
    "bundle-size": "node scripts/bundle-size.js",
    "perf": "node scripts/perf-test.js",
    "prepack": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "profanity",
    "filter",
    "typescript",
    "lightweight",
    "zero-dependencies",
    "l33t-speak",
    "unicode",
    "text-processing",
    "content-moderation",
    "performance"
  ],
  "author": "PeterM45",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PeterM45/bleeper.git"
  },
  "bugs": {
    "url": "https://github.com/PeterM45/bleeper/issues"
  },
  "homepage": "https://github.com/PeterM45/bleeper#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false,
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}
